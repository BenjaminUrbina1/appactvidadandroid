<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <uses-feature android:name="android.hardware.camera" android:required="false"/>
    <uses-feature android:name="android.hardware.telephony" android:required="false"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:targetApi="31">

        <!-- Activity Login -->
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity Home -->
        <activity
            android:name=".HomeActivity"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize|keyboardHidden"/>

        <!-- Activity Config -->
        <activity
            android:name=".ConfigActivity"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize|keyboardHidden"/>

        <!-- Activity Contactos -->
        <activity
            android:name=".ContactosActivity"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize|keyboardHidden"/>

        <!-- Activity Detalle -->
        <activity
            android:name=".DetalleActivity"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize|keyboardHidden"/>

        <!-- Activity Form Correo -->
        <activity
            android:name=".FormCorreoActivity"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize|keyboardHidden"/>

        <!-- Activity Form Evento -->
        <activity
            android:name=".FormEventoActivity"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize|keyboardHidden"/>

        <!-- Activity Confirm (SMS) -->
        <activity
            android:name=".ConfirmActivity"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize|keyboardHidden"/>

        <!-- Activity Perfil -->
        <activity
            android:name=".PerfilActivity"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize|keyboardHidden"/>

        <!-- Activity CÃ¡mara -->
        <activity
            android:name=".CamaraActivity"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize|keyboardHidden"/>

    </application>

</manifest>