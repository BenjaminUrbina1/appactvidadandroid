<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/app_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configuración"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/text_main"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configuración del Sistema"
        android:textSize="16sp"
        android:textColor="@color/text_dim"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnConfigWifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📶 Configurar Wi-Fi"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_button_primary" />

    <Button
        android:id="@+id/btnConfigBluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔗 Configurar Bluetooth"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_button_primary" />

    <Button
        android:id="@+id/btnConfigGeneral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚙️ Configuración General"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_button_primary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estas opciones abrirán la configuración del sistema Android"
        android:textSize="12sp"
        android:textColor="@color/text_dim"
        android:gravity="center"
        android:padding="8dp" />

</LinearLayout>